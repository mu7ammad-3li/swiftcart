rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // More specific rules for organization
    match /BellaEgyptImgs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
} 